@{
    var db = new bhfsContext();
    var tc = db.type_complaint.ToList();
    var hospital_list = db.hospitals.ToList();
}

<div class="container">

    <div class="card white darken-4">
        <h5 class="center-align">Filter Complaint Data</h5>
        <form action="@Url.Action("Filter","Complaint")" method="post">
            @Html.AntiForgeryToken()
            <div class="card-content">
                <div class="row">
                    <h6>Filter by type of complaint :</h6>
                    <div class="col l12 m12 s12">
                        <div class="row">
                            @foreach (type_complaint t in tc)
                            {
                                <div class="col l6 m12 s12">
                                    <label for="@t.ID">
                                        <input type="checkbox" id="@t.ID" class="filled-in" name="complaint_type[]" value="@t.ID" />
                                        <span>@t.Description</span>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <h6>Filter by Hospital</h6>
                    <div class="input-field col l12 m12 s12">
                        <select name="hospitalID" id="hospitalID" multiple>
                            @foreach (hospitals h in hospital_list)
                            {
                                <option value="@h.ID">@h.name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <h6>Filter by Status</h6>
                    <div class="input-field col l12 m12 s12">
                        <p>
                            <label for="O">
                                <input name="status" type="radio" value="O" id="O" />
                                <span>On Progress</span>
                            </label>
                        </p>
                        <p>
                            <label for="R">
                                <input name="status" type="radio" id="R" value="R" />
                                <span>Resolved</span>
                            </label>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <h6>Filter by Date Created</h6>
                    <div class="input-field col l6 s12 m12">
                        <input type="text" name="date_from" class="datepicker" />
                        <label for="date_from">Complaint From</label>
                    </div>
                    <div class="input-field col l6 s12 m12">
                        <input type="text" name="date_to" class="datepicker" />
                        <label for="date_to">Complaint To</label>
                    </div>
                </div>
                <div class="row">
                    <h6>Display Mode</h6>
                    <div class="input-field col l12 m12 s12">
                        <p>
                            <label for="W">
                                <input name="display" type="radio" value="W" id="W" />
                                <span>Web Page</span>
                            </label>
                        </p>
                        <p>
                            <label for="P">
                                <input name="display" type="radio" id="P" value="P" />
                                <span>PDF</span>
                            </label>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col l12 m12 s12">
                        <button type="submit" name="submit" class="waves-effect waves-light btn-large green"><i class="material-icons right">search</i> Go!</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
