@{ 
    var db = new bhfsContext();
    var tc = db.type_complaint.ToList();
    var hospital_list = db.hospitals.ToList();
}

<div class="col l12 s12 m12">
    <h5 class="center-align">Search Complaint Data <i class="material-icons">search</i></h5>
    <form action="@Url.Action("Filter","Complaint")" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <h6>Filter by type of complaint :</h6>
            <div class="col l12 m12 s12">
                <div class="row">
                    @foreach (type_complaint t in tc)
                    {
                        <div class="col l6 m12 s12">
                            <label for="@t.ID">
                                <input type="checkbox" id="@t.ID" class="filled-in" name="complaint_type[]" value="@t.ID" />
                                <span>@t.Description</span>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <h6>Filter by Hospital</h6>
            <div class="col l12 s12 m12">
                <div class="row">
                    @foreach (hospitals h in hospital_list)
                    {
                        <div class="col l6 m12 s12">
                            <label for="@h.ID" class="l6 m12 s12">
                                <input type="checkbox" id="@h.ID" class="filled-in" name="hospital[]" value="@h.ID" />
                                <span>@h.name</span>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <h6>Filter by Status</h6>
            <div class="input-field col l12 m12 s12">
                <p>
                    <label for="O">
                        <input name="status" type="radio" id="O" />
                        <span>On Progress</span>
                    </label>
                </p>
                <p>
                    <label for="R">
                        <input name="status" type="radio" id="R" />
                        <span>Resolved</span>
                    </label>
                </p>
            </div>
        </div>
        <div class="row">
            <h6>Filter by Date Created</h6>
            <div class="input-field col l6 s12 m12">
                <input type="date" name="date_from">
                <label for="date_from">Complaint From</label>
            </div>
            <div class="input-field col l6 s12 m12">
                <input type="date" name="date_to">
                <label for="date_to">Complaint To</label>
            </div>
        </div>
        <div class="row">
            <div class="col l12 m12 s12">
                <button type="submit" name="submit" class="waves-effect waves-light btn-large green"><i class="material-icons right">search</i>GO !</button>
            </div>
        </div>
    </form>
</div>
