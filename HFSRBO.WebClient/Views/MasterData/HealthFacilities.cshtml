
<div class="container">
    <div class="row">
        <div class="col l12 m12 s12">
            <h5>Health Facilities</h5>
            <div class="card white darken-1">
                <div class="card-content">
                    <div class="row">
                        <div class="col s12">
                            <ul class="tabs">
                                <li class="tab col l6 m12 s12"><a href="@Url.Action("HealthFacility","MasterData", new { tab = "1" })" class="fal_list @(ViewBag.Tab == "1" ? " active" : "")">Facility List</a></li>
                                <li class="tab col l6 m12 s12"><a href="@Url.Action("HealthFacility","MasterData", new { tab = "2" })" class="facility_type @(ViewBag.Tab == "2" ? " active" : "")">Types of Facility</a></li>
                            </ul>
                        </div>
                        @if(ViewBag.Tab == "1")
                        {
                            Html.RenderPartial("_HealthFacilites");
                        }else if(ViewBag.Tab =="2")
                        {
                            Html.RenderPartial("_FacilityType");
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

    <div class="fixed-action-btn">
        <a class="btn-floating btn-large red add" id="health_add">
            <i class="large material-icons">add_circle</i>
        </a>
    </div>

    @section scripts {
        <script>
            $("li.tab > a").click(function () {
                window.location.href = $(this).prop("href");
            });

            $("#health_add").click(function () {
                if ($('.fal_list').hasClass('active')) {
                    $("#add_hospital").modal('open');
                } else if ($('.facility_type').hasClass('active')) {
                    $("#add_fal_type").modal('open');
                }
            });
        </script>
    }
