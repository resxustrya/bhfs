@using HFSRBO.Core;
@{
    ViewBag.Title = "ComplaintsType";
}

<div class="container">
    <div class="row">
        <div class="col l12 m12 s12">
            <h5>Complaint Types</h5>
            <div class="card white darken-1">
                <div class="card-content">
                    <table id="type_complaint" class="responsive-table">
                        <tr>
                            <th>Description</th>
                            <th>*</th>

                        </tr>
                        @foreach (type_complaint tp in Model)
                        {
                            <tr>
                                <td>@tp.Description</td>
                                <td>
                                    <a href="@Url.Action("DeleteComplaintType","MasterData",new { ID = tp.ID })" onclick="return confirm('Do you want to delete this item?');" class="btn red"><i class="material-icons">delete</i></a>
                                    <a href="#" onclick="edit(this);" data-url="@Url.Action("EditComplaintType","MasterData",new { ID = tp.ID })" class="btn red"><i class="material-icons">edit</i></a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="fixed-action-btn">
    <a class="btn-floating btn-large red add"  onclick="add(this);" data-url="@Url.Action("AddComplaintType","MasterData")">
        <i class="large material-icons">add_circle</i>
    </a>
</div>
@section scripts{
    <script>
        function edit(elem) {
            var url = $(elem).data('url');
            $.get(url, function (res) {
                $("#add_type_complaint > .modal-content").html(res);
                $("#add_type_complaint").modal('open');
            });
        }
        function add(elem)
        {
            var url = $(elem).data('url');
            $.get(url, function (res) {
                $("#add_type_complaint > .modal-content").html(res);
                $("#add_type_complaint").modal('open');
            });
        }
    </script>    
}