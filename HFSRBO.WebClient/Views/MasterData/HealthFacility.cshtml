
<div class="row">
    <div class="col l12 m12 s12">
        <h5>Health Facilities</h5>
        <div class="card white darken-1">
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <ul class="tabs">
                            <li class="tab col l6 m12 s12"><a href="#tab1" class="fal_list">Facility List</a></li>
                            <li class="tab col l6 m12 s12"><a href="#tab2" class="facility_type">Types of Facility</a></li>
                        </ul>
                    </div>
                    <div id="tab1" class="col s12">
                        <table id="type_complaint" class="responsive-table">
                            <tr>
                                <th>Health Facility</th>
                                <th>Address</th>
                                <th>Facility Type</th>
                                <th>*</th>
                            </tr>
                            @foreach (var hospital in Model.healthFacility)
                            {
                                <tr>
                                    <td>@hospital.Name</td>
                                    <td>@hospital.Address</td>
                                    <td>@hospital.FacilityType</td>
                                    <td>
                                        <a href="@Url.Action("DeleteHospital","MasterData",new { ID = hospital.ID })" onclick="return confirm('Do you want to delete this item?');" class="btn red"><i class="material-icons">delete</i></a>
                                        <a class="btn red"><i class="material-icons">edit</i></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <div id="tab2" class="col s12">
                        <table id="type_complaint" class="responsive-table">
                            <tr>
                                <th>Facility Description</th>
                                <th>*</th>
                            </tr>
                            @foreach (facility_type ft in Model.facilityType)
                            {
                                <tr>
                                    <td>@ft.Name</td>
                                    <td>
                                        <a href="@Url.Action("DeleteFacility","MasterData",new { ID = ft.ID })" onclick="return confirm('Do you want to delete this item?');" class="btn red"><i class="material-icons">delete</i></a>
                                        <a class="btn red"><i class="material-icons">edit</i></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="fixed-action-btn">
    <a class="btn-floating btn-large red add" id="health_add">
        <i class="large material-icons">add_circle</i>
    </a>
</div>

@section scripts {
    <script>
        $("#health_add").click(function () {
            if ($('.fal_list').hasClass('active')) {
                $("#add_hospital").modal('open');
            } else if ($('.facility_type').hasClass('active')) {
                $("#add_fal_type").modal('open');
            }
        });
    </script>
}
