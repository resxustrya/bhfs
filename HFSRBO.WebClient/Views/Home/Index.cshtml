@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "DOH 7";
}


<div id="index-banner" class="parallax-container" style="background: rgba(76, 175, 80, 0.5);">
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <div class="row center">
                <div class="col l12 s6 m6">
                    <h2 class="header white-text" style="color:white;">BUREAU OF HEALTH FACILITIES AND SERVICES/DOH REGIONAL OFFICE</h2>
                </div>
            </div>
            <div class="row center">
                <div class="col l12 s6 m6">
                    <h5 class="header light">An online hospital and health facility complaint services</h5>
                </div>
            </div>
            <div class="row center">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("Login", "Account")" id="download-button" class="btn-large waves-effect waves-light green">Login to your account <i class="material-icons right">send</i></a>
                }
                else
                {
                    <a href="@Url.Action("Complaints","Complaint")" id="download-button" class="btn-large waves-effect waves-light green">Signed In as @User.Identity.GetUserName()</a>
                }
            </div>
            <br><br>
        </div>
    </div>
    <div class="parallax"><img src="@Url.Content("~/Images/paralax.jpg")" alt="Unsplashed background img 1"></div>
</div>

<div class="container">
    <div class="section">

        <!--   Icon Section   -->
        <div class="row">
            <div class="col s12 m4">
                
            </div>

            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center brown-text"><i class="material-icons">settings</i></h2>
                    <h5 class="center">Health Facility Complaints</h5>

                    <p class="light">A web based health facility complaints system for fast and accurate consolidation and reporting</p>
                </div>
            </div>

            <div class="col s12 m4">
                
            </div>
        </div>

    </div>
</div>

